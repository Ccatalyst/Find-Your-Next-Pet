<section class="row container d-flex flex-wrap py-3 mb-4"></section>
	<div id="petdetailcontainer" class="col-12 col-lg-6 col-xxl-5 p-2 m-1">
		<div class="col-12"><img id="petdetailimg" class="col-6" src="{{pets.primary_photo_cropped.full}}" alt="{{pets.description}}"></div>

	<div id="savedpetscontainer" class="col-12 col-lg-5 col-xxl-5 p-2 m-1">
		<div class="col-12" id="savedpetsheader">
			<h3>Your Saved Pets</h3>
		</div>
		<div id="savedpetslist" style="overflow:auto;">
			{{#each savedPet as |saved|}}
			{{> savedpetcards-details}}
			{{/each}}
		</div>
	</div>
</section>