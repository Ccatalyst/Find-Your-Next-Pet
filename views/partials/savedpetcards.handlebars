{{#each savedpet as |pet| }}
<a href="/:id">
	<div class="card mb-3">
		<div class="row g-0">
			<div class="col-md-4">
				<div class="savedpetimageholder">
					<img src="{{savedpetimage}}" class="img-fluid" alt="...">
				</div>
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<i class="savedhearticon"><button>Unsave</button></i>
					<h5 class="card-title">{{name}}</h5>
					<ul class="card-text" style="list-style: none;">
						<li>{{gender}}</li>
						<li>{{breed}}</li>
						<li>{{age}}</li>
					</ul>
					<p class="card-text"><small class="text-muted">{{location}}</small></p>
				</div>
			</div>
		</div>
	</div>
</a>
{{/each}}