<div class="card mb-3">
	<div class="row g-0">
		<div class="col-md-4">
			<div class="savedpetimageholder">
				<img src="{{animals.photos[0].small}}" href="/pets/:id" class="img-fluid" alt="{{animals.description}}">
			</div>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<i class="savedhearticon"><button id="{{animals.id}}">Unsave</button></i>
				<h5 class="card-title">{{animals.name}}</h5>
				<ul class="card-text" style="list-style: none;">
					<li>{{animals.gender}}</li>
					<li>{{animals.breed.primary}}</li>
					<li>{{animals.age}}</li>
				</ul>
				<p class="card-text"><small class="text-muted">{{animals.contact.address.postcode}}</small></p>
			</div>
		</div>
	</div>
</div>
