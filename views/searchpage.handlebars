<section class="row container d-flex flex-wrap py-3 mb-4 justify-content-center">
	<div id="searcharea" class="d-inline-flex flex-wrap">
		<fieldset>
			<legend>Shelter Search</legend>
			<div class="col-12 d-flex flex-wrap justify-content-around controlgroup" id="pet-type-choice">
				<div class="p-2 m-1 form-check">
					<input class="form-check-input" type="radio" name="flexRadioDefault" id="typedog">
					<label class="form-check-label" for="typedog">
						Search for Dogs
					</label>
				</div>
				<div class="p-2 m-1 form-check">
					<input class="form-check-input" type="radio" name="flexRadioDefault" id="typecat">
					<label class="form-check-label" for="typecat">
						Search for Cats
					</label>
				</div>
				<div class="p-2 m-1 form-check">
					<input class="form-check-input" type="radio" name="flexRadioDefault" id="typeother" checked>
					<label class="form-check-label" for="typeother">
						Search all Animal Types
					</label>
				</div>

				<div id="valueNum">
					<label class="form-label" for="valueNum">
						How many results would you like?
					</label>
					<select id="limitCheck">
						<option>5</option>
						<option>10</option>
						<option>25</option>
						<option>50</option>
						<option>100</option>
					</select>
				</div>

				<div class="d-grid col-12 p-2 mx-auto">
					<button class="button" id="searchbutton" type="button">Search</button>
				</div>

			</div>
		</fieldset>
	</div>
</section>

<section class="container row d-flex flex-wrap">	
	<!-- results and details -->
		<div id="searchresultscontainer" class="col-12 col-lg-6 col-xxl-5 p-2 m-1">
			<div class="col-12" id="searchheader">
				<h3>Search Results</h3>
			</div>

			<div id="searchresults" style="overflow:auto;">
			{{!-- {{#each petSearchCall as |results|}} --}}
			{{!-- {{> searchresults-details}} --}}
			{{!-- {{/each}} --}}
			
			
			
			</div>

			
		</div>



		<div id="petdetailcontainer" class="col-12 col-lg-5 col-xxl-5 p-2 m-1">
			<div class="col-12"><img id="petdetailimg" class="col-6"
					src="{{petSearchCall.[0].primary_photo_cropped.full}}" alt="dog"></div>
			<div id="petdetailname" class="col-12">
				{{!-- TODO: when saved, fa-regular in class changes to fa-solid --}}
				<h3>{{name}} - <i type="button" class="fa-regular fa-heart"></i></h3>
			</div>
			<div id="petdetailtext" class="col-12">
				<ul class="herolist" style="list-style: none;">


					<li>
						{{breed.primary}}
					</li>
					<li>
						{{gender}}
					</li>
					<li>
						{{age}}
					</li>
					<li>
						<p>{{description}}</p>
					</li>
					<li>
						{{contact.email}}
					</li>
				</ul>
			</div>
		</div>

</section>


<script src="/js/search.js"></script>